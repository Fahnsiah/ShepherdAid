@model IEnumerable<ShepherdAid.Models.FuncOrganizationLeaderMembers_Result>

@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mybreadcrumb">
    @Html.ActionLink("Organizations List", "Index", "Organizations") >>
    @Html.ActionLink("Organization Detail", "Details", "Organizations", new { id = Session["id"] }, null) >>
    Member List
</div>
<div class="row">
    <fieldset>
        <legend>AVAILABLE MEMBER LIST</legend>


        <div class="col-md-6 col-xs-12">

            <div class="search-area">
                <div class="col-md-12 col-xs-12">
                    @using (Html.BeginForm())
                    {
                        <div class="input-group">
                            <input type="text" class="form-control search-field" placeholder="Search" id="search" name="search" />
                            <div class="input-group-btn">
                                <button class="btn btn-primary" type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>

                            </div>
                        </div>
                        @*</form>*@
                    }
                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    @if (Model != null && Model.Count() > 0)
                    {
                        <table id="ListTable" class="table table-responsive table-bordered table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gender)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MemberID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MemberID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Create", "OrganizationLeaders", new { id = item.ID }, new { @class = "glyphicon glyphicon-circle-arrow-right" })
                                    </td>
                                </tr>
                            }

                        </table>
                    }
                    else
                    {
                        <span class="no-record">NO AVAILABLE LEADER.</span>
                    }
                </div>
            </div>
        </div>

    </fieldset>
</div>

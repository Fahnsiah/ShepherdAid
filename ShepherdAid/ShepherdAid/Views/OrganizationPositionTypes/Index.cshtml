@model IEnumerable<ShepherdAid.Models.OrganizationPositionType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mybreadcrumb">
    Organization Postition List
</div>
<fieldset>
    <legend>ORGANIZATION POSITION TYPE LIST</legend>

    <div class="col-md-8 col-xs-12">
        <div class="search-area">
            <div class=" col-md-10 col-xs-10">
                @using (Html.BeginForm())
                {
                    <div class="input-group">
                        <input type="text" class="form-control search-field" placeholder="Search" id="search" name="search" />
                        <div class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>

                        </div>
                    </div>
                    @*</form>*@
                }
            </div>
            <div class="col-md-1 col-xs-1 new-record">
                <a href="~/OrganizationPositionTypes/Create" title="Create New"><span class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>

        @if (Model != null && Model.Count() > 0)
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Organization.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Priority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Organization.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="nowrap">
                            @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit", @title = "Edit Record" }) |
                            @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash", @title = "Delete Record" })
                        </td>
                    </tr>
                }

            </table>
        }

    </div>


</fieldset>


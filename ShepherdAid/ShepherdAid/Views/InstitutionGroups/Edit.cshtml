@model ShepherdAid.Models.InstitutionGroup

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mybreadcrumb">
    @Html.ActionLink("Clients List", "Clients", "InstitutionGroups", null) >>

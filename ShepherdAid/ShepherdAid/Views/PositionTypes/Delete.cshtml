    @Html.ActionLink("Position List", "Index", "PositionTypes") >>
    Delete Position
</div>

<fieldset>
    <legend>Delete @Model.Name</legend>
    <div class="col-md-8">

        <h3>Are you sure you want to delete this?</h3>
        <div>
            
            <dl class="dl-horizontal">
               
                <dt>
                    @Html.DisplayNameFor(model => model.Name)

@model ShepherdAid.Models.ObligationType

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mybreadcrumb">
    @Html.ActionLink("Obligation List", "Index", "ObligationTypes") >>
    Delete Obligation
</div>

<fieldset>
    <legend>Delete @Model.ObligationName</legend>
    <div class="col-md-8">

        <h3>Are you sure you want to delete this?</h3>
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ObligationName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ObligationName)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger form-control" />
                </div>
            }
        </div>
    </div>
</fieldset>
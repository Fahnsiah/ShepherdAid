@model ShepherdAid.Models.MemberSacrament

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mybreadcrumb">
    @Html.ActionLink("Members List", "Index", "Members") >>
    @Html.ActionLink("Member Detail", "Details", "Members", new { id = Session["id"] }, null) >>
    Member Sacrament
</div>

<fieldset>
    <legend>NEW MEMBER SACRAMENT</legend>

    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @if (ViewBag.Error != null)
                {
                    <div id="divError" class="alert alert-danger alert-dismissable">
                        <span class="close" data-dismiss="alert" aria-label="close">&times;</span>
                        <strong>Fail!</strong> @ViewBag.Error
                    </div>

                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group hidden">
                    @Html.LabelFor(model => model.MemberID, "MemberID", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("MemberID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SacramentID, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-9">
                        @Html.DropDownList("SacramentID", null, "--select--", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SacramentID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Institution.InstitutionGroupID, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-9">
                        @Html.DropDownList("InstitutionGroupID", null, "--select--", htmlAttributes: new { @class = "form-control", @id = "InstitutionGroupID", name = "InstitutionGroupID" })
                        @Html.ValidationMessageFor(model => model.Institution.InstitutionGroupID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.InstitutionID, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-9">
                        @Html.DropDownList("InstitutionID", null, "--select--", htmlAttributes: new { @class = "form-control", @id = "InstitutionID", name = "InstitutionID" })
                        @Html.ValidationMessageFor(model => model.InstitutionID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AdministeredBy, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.AdministeredBy, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdministeredBy, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateAdministered, htmlAttributes: new { @class = "control-label col-md-3 required" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.DateAdministered, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DateAdministered, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                </div>

            </div>
        }

    </div>
</fieldset>

@section Scripts{
    <script src="~/Scripts/Custom/tabs.js"></script>
}
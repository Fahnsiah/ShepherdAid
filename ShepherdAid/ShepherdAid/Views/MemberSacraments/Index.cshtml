@model IEnumerable<ShepherdAid.Models.MemberSacrament>
<div class="row">
    <div class="col-md-10 partial-background">

        <p class="text-right">
            <a href="~/MemberSacraments/Create" title="Create New"><span class="glyphicon glyphicon-plus"></span></a>
        </p>
        @if (Model != null && Model.Count() > 0)
        {

            <table class="table table-responsive table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Sacrament.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdministeredBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateAdministered)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Institution.InstitutionName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sacrament.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdministeredBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateAdministered)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Institution.InstitutionName)
                        </td>
                        <td class="nowrap">
                            @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit", @title = "Edit" })||
                            @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash", @title = "Delete" }) 
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <span class="no-record">NO SACRAMENT FOR THE MEMBER</span>
        }
    </div>
</div>
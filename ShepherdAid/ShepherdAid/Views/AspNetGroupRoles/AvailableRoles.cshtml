@model IEnumerable<ShepherdAid.Models.spGroupAvailableRoles_Result>


@using (Html.BeginForm("AddGroupRoles", "AspNetGroupRoles"))
{
    @Html.AntiForgeryToken()
    
    if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationMessage("Error")
    }

    if (Model.Count() > 0)
    {
        <div class="row">
            <div class="row">
                <div class="col-md-10 col-xs-12">
                    <h4>Available Roles</h4>
                </div>

                <div class="col-md-2 col-xs-12">
                    <p class="text-right">
                        <input type="submit" id="assign" name="assign" class="btn btn-primary" value="Assign" />
                    </p>
                </div>
            </div>
        </div>
    
        <table class="table table-responsive">
            <tr>
                <th>
                    <input type="checkbox" name="allavailableroles" id="allavailableroles" value="0" title="Select All" />Check/Uncheck All
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="checkbox" id="divavailablecheckbox">
                            <label>
                                <input type="checkbox"
                                       name="availableroles"
                                       id="availableroles"
                                       value="@item.Id" /> @item.Name
                                </label>
                            </div>
                        </td>
                    </tr>
            }

        </table>
    }
}

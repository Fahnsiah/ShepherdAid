@model IEnumerable<ShepherdAid.Models.ReportMembersList_Result>

@{
    ViewBag.Title = "DioceseMembersList";
    Layout = "~/Views/Shared/_Report.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Parish Name", htmlAttributes: new { @class = "text-success col-md-2" })
            <div class="col-md-10">
                <div class="input-group-btn">                   
                    @Html.DropDownList("ParishID", null, "--select--", htmlAttributes: new { @class = "text-success" })
                    <button class="text-success" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </div>
                @*<input type="submit" id="btnSearch" value="Search" name="btnSearch" class="text-success" />*@
            </div>
        </div>

        @if (Model != null)
        {

            <div class="row">

                <div class="panel panel-primary">
                    <div class="col-md-11 panel-heading">
                        MEMBERS LIST
                    </div>
                    <div class="col-md-1">
                        <p class="text-right">
                            @Html.ActionLink(" ", "DioceseMembersList", "ReportsPrint", new { }, new { @class = "glyphicon glyphicon-print" })
                        </p>
                    </div>
                </div>
            </div>

            <div class="row">

                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MemberID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MobilePhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficePhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MemberType)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobilePhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfficePhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberType)
                    </td>
                </tr>
                }

                </table>

            </div>
        }
    </div>
}
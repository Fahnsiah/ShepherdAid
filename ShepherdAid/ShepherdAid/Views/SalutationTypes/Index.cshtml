@model IEnumerable<ShepherdAid.Models.SalutationType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mybreadcrumb">
    Salutation Type List
</div>

<fieldset>
    <legend>List of Salutation Types</legend>
    <div class="col-md-6">
        <div class="search-area">
            <div class=" col-md-11 col-xs-11">
                @using (Html.BeginForm())
                {
                    <div class="input-group">
                        <input type="text" class="form-control search-field" placeholder="Search" id="search" name="search" />
                        <div class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>

                        </div>
                    </div>
                    @*</form>*@
                }
            </div>
            <div class="col-md-1 col-xs-1 new-record">
                <a href="../SalutationTypes/Create" title="Create New"><span class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
    
            @if (Model != null && Model.Count() > 0)
            {
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TypeName)
                        </th>
                        <th class="th-action"></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeName)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit", @title = "Edit Record" }) |
                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash", @title = "Delete Record" })
                            </td>
                        </tr>
                    }

                </table>
            }
        </div>

</fieldset>
@model IEnumerable<ShepherdAid.Models.FuncUsersAndGroups_Result>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Report.cshtml";
}
<div class="row">

    @*report links pane*@
    <div class="col-md-2">
        @{Html.RenderAction("ReportLinks", "Reports");}
    </div> @*report links pane*@


    @*report content pane*@
    <div class="col-md-5">

        <div class="mybreadcrumb">
            @Html.ActionLink("Reports", "Index", "Reports")>>
            Users and Groups
        </div>

        <p class="text-right">
            @Html.ActionLink(" ", "", new { }, new { @class = "glyphicon glyphicon-print" })
        </p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissable">
                <span class="close" data-dismiss="alert" aria-label="close">&times;</span>
                <strong>Fail!</strong> @ViewBag.Error
            </div>
        }

        @if (Model != null && Model.Count() > 0)
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        User Name
                    <th>
                        Group Name
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupName)
                        </td>
                    </tr>
                }

            </table>
        }
    </div> @*report content pane*@


</div>


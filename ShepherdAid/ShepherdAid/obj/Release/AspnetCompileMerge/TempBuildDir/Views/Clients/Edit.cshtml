                        @Html.ValidationMessageFor(model => model.DateRecorded, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary form-control" />
                    </div>
                </div>
            </div>
        }

    </div>

</div>
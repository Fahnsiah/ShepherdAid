@model ShepherdAid.Models.AvaliableRolesModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title = string.Empty;
    if (Model.AvailableRoles.Count().Equals(1))
    {
        title = "Available Role";
    }
    else if (Model.AvailableRoles.Count() > 0)
    {
        title = "List of Available Roles";
    }
    else
    {
        title = "No available role exists for the selected user.";
    }
}

<div class="myinputarea">
    <h4>@title</h4>

    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("AvailableRolesList", "Roles"))
            {
                @Html.AntiForgeryToken()

                foreach (var item in Model.AvailableRoles)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"
                                   name="SelectedRoles"
                                   id="SelectedRoles"
                                   value="@item.Value" /> @item.Text
                            </label>
                        </div>
                }
                
                <div class="form-actions no-color">
                    <input type="submit" class="btn btn-primary form-control" value="Assign Role" /> 
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div> @*end of first column*@

        <div class="col-md-8">

        </div>@*end of second column*@
    </div>
</div>



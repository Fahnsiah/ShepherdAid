                                @Html.ValidationMessageFor(model => model.OfficePhone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NationalityTypeID, htmlAttributes: new { @class = "control-label col-md-4 required" })
                            <div class="col-md-8">
                                @Html.DropDownList("NationalityTypeID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NationalityTypeID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div id="divcounties" class="form-group">

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <input type="submit" value="Create" class="btn btn-primary form-control" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
</fieldset>
<script src="~/Scripts/Custom/member.js"></script>
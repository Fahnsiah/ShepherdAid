@model ShepherdAid.Models.Member

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string memberName = string.Format("{0} {1} ({2})", Model.SalutationType.TypeName, Model.LastName, Model.MemberID);

    string imgUrl = ViewBag.MemberPhoto;

    if (imgUrl == null)
    {
        imgUrl = ShepherdAid.Models.StaticVariables.MemberDefaultPhoto;
    }


}
<div class="mybreadcrumb">
    @Html.ActionLink("Member List", "Index", "Members") >>
    Member Detail
</div>

<fieldset>
    <legend>DETAIL OF @memberName</legend>
    <div class="row">
       
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.MemberType.TypeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MemberType.TypeName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.MemberID)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MemberID)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SalutationType.TypeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SalutationType.TypeName)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MiddleName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.GenderType.TypeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GenderType.TypeName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MaritalStatusType.TypeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaritalStatusType.TypeName)
                    </dd>

                </dl>
            </div>

            <div class="col-md-4">
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.ResidentAddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ResidentAddress)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EmailAddress)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MobilePhone)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MobilePhone)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.OfficePhone)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.OfficePhone)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NationalityType.TypeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NationalityType.TypeName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.County.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.County.Name)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Region)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Region)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.StatusType.StatusName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StatusType.StatusName)
                    </dd>

                </dl>
            </div>

            <div class="col-md-2">
                <img src="~/Content/@imgUrl" class="myphoto" />
                
            </div>

            <div class="col-md-2 col-sm-12 related-tasks">
                <span class="related-tasks-header">RELATED TASKS</span><br />
                @if (ViewBag.MemberPhoto == null)
                {
                    <div>
                        @Html.ActionLink("Add Photo", "file", "PhotoUploads", new { id = Session["member_id"] }, null)
                    </div>
                }
                else
                {
                    <div>
                        @Html.ActionLink("Change Photo", "file", "PhotoUploads", new { id = Session["member_id"] }, null)
                    </div>

                }
                @Html.ActionLink("Edit", "Edit", new { id = @Model.ID }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = @Model.ID }) <br />
            </div>

        </div>



        <div class=" col-md-12">
            <ul class="nav nav-tabs">
                <li class="btn btn-default" id="sacrament-li"><a href="#sacraments-tab">SACRAMENTS</a></li>
                <li class="btn btn-default" id="obligation-li"><a href="#obligation-tab">OBLIGATIONS </a></li>
                <li class="btn btn-default" id="family-li"><a href="#families;-tab">FAMILY MEMBERS</a></li>
            </ul>

            <section id="sacraments-tab" class="tab-content hide">
                <div id="divsacraments">
                    @*member tab*@
                </div>
            </section>

            <section id="obligation-tab" class="tab-content hide">
                <div id="divobligations">
                    @*leader tab*@
                </div>
            </section>

            <section id="families-tab" class="tab-content hide">
                <div id="divfamilies">
                    @*leader tab*@
                </div>
            </section>
        </div>

    </div>
</fieldset>
@section Scripts{
    <script src="~/Scripts/Custom/tabs.js"></script>
}